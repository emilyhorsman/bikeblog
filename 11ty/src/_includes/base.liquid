<!doctype html>
<html lang="en" dir="ltr">
  <head>
    {% render 'head.liquid', site: site, summary: summary, page: page, title: title %}
  </head>
  <body>
    <header>
      <div>
        <a href="/">{{ site.title }}</a>
      </div>
      <div>
        <a href="/about/">About</a>
        <a href="/posts/">Archive</a>
        {% comment %}
          {{ with (.Site.GetPage "/posts").OutputFormats.Get "rss"
          -}}
          <a href="{{ .RelPermalink }}">RSS</a>
          {{ end }}
        {% endcomment %}
      </div>
    </header>
    <main>
      {% block main -%}
      {{- content -}}
      {%- endblock %}
    </main>
  </body>
</html>
