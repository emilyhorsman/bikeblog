---
eleventyImport:
  collections: ["posts"]
---
{% layout 'base.liquid' %}

{% block main %}
{% for post in collections.posts %}
  <div class="summary">
    <h2>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <p>{{ post.data.summary }}</p>
    <div class="row">
      <a href="{{ post.url }}">Read More</a>
      {% render 'tags.liquid', tags: post.data.tags, limit: 2 %}
    </div>
  </div>
{% endfor %}
{% endblock %}
