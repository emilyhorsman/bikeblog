{% layout 'base.liquid' %}

{% block main %}
<div class="heading">
  <h1>
    <a href="{{ page.url }}">{{ title }}</a>
  </h1>

  <time datetime="{{ page.date | date: '%Y-%m-%dT%H:%M:%S%z' }}">
    {{ page.date | date: '%b %-d, %Y' }}
  </time>
</div>

{{ content }}

{% render 'tags.liquid', tags: postTags, text: 'Tags:&nbsp;' %}
{% endblock %}
